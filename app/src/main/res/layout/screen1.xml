<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:gravity="center"
        android:background="@color/colorPrimary">

        <EditText
            android:id="@+id/edtxt_search_bar"
            android:layout_width="244dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/search_bar"
            android:drawableRight="@drawable/icon_search"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:hint="Search" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/ic_graph"
            android:layout_alignBottom="@+id/edtxt_search_bar"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="315dp"
            android:background="@drawable/icon_analytics"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/edtxt_search_bar"
            android:id="@+id/ic_menu"
            android:layout_marginLeft="365dp"
            android:background="@drawable/icon_menu"/>
    </RelativeLayout>


